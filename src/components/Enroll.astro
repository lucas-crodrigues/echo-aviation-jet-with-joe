---
import {
  COMPANY_NICKNAME,
  ADDRESS,
  ADDRESS_CITY,
  ADDRESS_STATE,
  ADDRESS_ZIP,
  AIRPORT,
  AIRPORT_CODE,
  PHONE_NUMBER,
} from "../consts";
import EnrollForm from "../components/EnrollForm.astro";
---

<section
  class="relative z-10 bg-checkered bg-fixed text-accent-100 scroll-my-20 lg:scroll-my-28"
  id="contact"
>
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="w-full flex flex-col items-center">
      <h2
        class="text-center text-3xl font-semibold tracking-tighter uppercase pt-16 pb-5"
      >
        Enroll Now
      </h2>
      <div class="bg-primary-800 w-48 h-1 mb-16"></div>
    </div>

    <div class="flex flex-col-reverse lg:flex-row">
      <!-- Text Section -->
      <div class="w-full lg:w-1/2">
        <div class="flex flex-col items-center">
          <h3 class="text-3xl font-semibold text-center">
            Reach Out to {COMPANY_NICKNAME}
          </h3>
          <h4 class="text-2xl tracking-wider pb-5 text-center text-gray-100">
            Let's Get You In The Air
          </h4>
          <div class="bg-primary-800 w-72 h-1 mb-16"></div>

          <!--NAP-->
          <div class="flex flex-col gap-5 max-w-2xl pb-10 px-5">
            <div class="flex flex-row">
              <div class="text-accent-100">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                  ></path>
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                <a href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a><br />
              </div>
            </div>


            <div class="flex flex-row">
              <div class="fill-accent-100">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="24"
                  viewBox="0 -960 960 960"
                  width="24"
                  ><path
                    d="m612-292 56-56-148-148v-184h-80v216l172 172ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-400Zm0 320q133 0 226.5-93.5T800-480q0-133-93.5-226.5T480-800q-133 0-226.5 93.5T160-480q0 133 93.5 226.5T480-160Z"
                  ></path></svg
                >
              </div>
              <div class="ml-5 p-text text-gray-300">
                9:00 AM to 5:00 PM<br />
                All other times by appointment
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Section -->
      <div class="w-full lg:w-1/2">
        <div class="mx-auto px-10">
          <EnrollForm />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);

  const contactUs = document.getElementById("contactUs");

  if (isSafari && contactUs) {
    contactUs.classList.remove("bg-fixed");
  }
</script>
