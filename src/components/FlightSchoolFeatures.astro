---
import content from "../data/featuresInfo.js";
import { GiCommercialAirplane } from "react-icons/gi";
import ImageComp from "./ImageComp.astro";

const { title, description, features } = content;
const imagePath = "/src/assets/stock-saj-shafique-xFT4NCf8hQk-unsplash.jpg";
---

<section class="relative py-16 lg:py-24 ">
  <div class="absolute -z-30 inset-0" aria-hidden="true">
    <ImageComp
      imagePath={imagePath}
      loading="eager"
      styles="absolute object-cover h-full w-full object-center -z-50"
    />
    <div class="absolute bg-primary-800/80 w-full h-full z-0"></div>
  </div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Heading and Description -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-5xl font-bold text-accent-400 mb-4">
        {title}
      </h2>
      <p class="text-lg text-cod-gray-100 max-w-4xl mx-auto">{description}</p>
    </div>

    <!-- Feature Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class="text-center p-6 bg-gray-800/70 shadow-lg rounded-xl flex flex-col items-center justify-between transform hover:scale-105 transition duration-300" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="text-primary-500 text-5xl mb-4">
            <GiCommercialAirplane />
          </div>
          <div>
            <h3 class="text-2xl font-semibold text-white mb-2">{feature.title}</h3>
            <p class="text-gray-300 mb-4">{feature.description}</p>
          </div>
          <a href={feature.link} class="text-accent-300 font-semibold hover:underline">
            {feature.linkText} â†’
          </a>
        </div>
      ))}
    </div>
  </div>
</section>