---
import ImageComp from "../components/ImageComp.astro";

const title = "Weekly Discovery Sessions";
const subtitle = "Ask questions. Get clarity. Find your training path.";
const description = "Join our weekly Discovery Sessions every Friday. Fill out the form to get a private call link. These sessions are your chance to speak directly with an Echo Aviation advisor, ask questions about flight training, and see if our independent CFI model fits your goals.";
const features = [
  {
    icon: "arrow-down-tray",
    title: "Personalized Guidance",
    text: "Get direct answers about training, timelines, and instructor options.",
  },
  {
    icon: "calendar-days",
    title: "Held Every Friday",
    text: "Pick a Friday that works for you — we’ll send you the call link after signup.",
  },
  {
    icon: "chat-bubble-left-ellipsis",
    title: "No Commitments",
    text: "Just honest answers about how Echo Aviation works and if it’s right for you.",
  },
];
const imagePath = "/src/assets/stock-headway-person-studying.jpg";
---

<div class="relative isolate overflow-hidden bg-white px-6 py-24 sm:py-32 lg:overflow-visible lg:px-0">
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <svg class="absolute top-0 left-[max(50%,25rem)] h-256 w-512 -translate-x-1/2 mask-[radial-gradient(64rem_64rem_at_top,white,transparent)] stroke-gray-200" aria-hidden="true">
      <defs>
        <pattern id="grid-bg" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
          <path d="M100 200V.5M.5 .5H200" fill="none" />
        </pattern>
      </defs>
      <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
        <path d="M-100.5 0h201v201h-201Z M699.5 0h201v201h-201Z M499.5 400h201v201h-201Z M-300.5 600h201v201h-201Z" stroke-width="0" />
      </svg>
      <rect width="100%" height="100%" stroke-width="0" fill="url(#grid-bg)" />
    </svg>
  </div>

  <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start lg:gap-y-10">
    <div class="lg:col-span-2 lg:col-start-1 lg:row-start-1 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8">
      <div class="lg:pr-4">
        <div class="lg:max-w-lg">
          <p class="text-base font-semibold text-primary-600">Weekly Q&A</p>
          <h1 class="mt-2 text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">{title}</h1>
          <p class="mt-6 text-xl text-gray-700">{description}</p>
        </div>
      </div>
    </div>

    <div class="lg:p-12 p-2 lg:sticky lg:top-4 lg:col-start-2 lg:row-span-2 lg:row-start-1 lg:overflow-hidden">
      <ImageComp imagePath={imagePath} styles="w-full h-auto lg:mt-24 rounded-xl shadow-xl ring-1 ring-gray-400/10" />
    </div>

    <div class="lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8">
      <div class="lg:pr-4">
        <div class="max-w-xl text-base text-gray-700 lg:max-w-lg">
          <ul role="list" class="mt-8 space-y-8 text-gray-600">
            {features.map((item) => (
              <li class="flex gap-x-3">
                <svg class="mt-1 h-5 w-5 flex-none text-primary-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <use href={`#${item.icon}`} />
                </svg>
                <span>
                  <strong class="font-semibold text-gray-900">{item.title}</strong> {item.text}
                </span>
              </li>
            ))}
          </ul>
          <p class="mt-8">After filling out the short form above, you’ll receive an email with the session link. Join at your scheduled time and bring your questions!</p>
        </div>
      </div>
    </div>
  </div>
</div>
