---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, quality = 60, styles = "", loading = "lazy" } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/public/blog/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/public/blog/*.{jpeg,jpg,png,gif,webp}"`,
  );
---

<Image
  alt=""
  src={images[imagePath]()}
  class={styles}
  quality={quality}
  loading={loading}
/>
