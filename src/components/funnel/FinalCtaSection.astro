---
const { title, paragraph, buttonText, buttonLink, note } = Astro.props;
---

<section class="py-20 bg-blue-900 text-white text-center">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-4">{title}</h2>
    <p class="text-lg max-w-2xl mx-auto mb-6">{paragraph}</p>
    <a href={buttonLink} class="bg-white text-blue-900 font-bold px-8 py-3 rounded-lg shadow-md hover:bg-gray-200 transition">
      {buttonText}
    </a>
    {note && (
      <p class="mt-4 text-sm italic text-accent-200">{note}</p>
    )}
  </div>
</section>
