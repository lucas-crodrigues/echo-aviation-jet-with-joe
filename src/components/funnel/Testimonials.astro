---
import ImageComp from "../ImageComp.astro";
const { title, subtitle, testimonials } = Astro.props;
---

<section class="relative isolate bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-sm font-medium text-primary-600 uppercase tracking-wide">{title}</h2>
      <p class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">{subtitle}</p>
    </div>

    <div class="mt-20 grid grid-cols-1 gap-10 md:grid-cols-3 lg:gap-16">
      {testimonials.map((t) => (
        <div class="space-y-10">
          <figure class="rounded-xl bg-white p-6 shadow-md ring-1 ring-gray-100">
            <blockquote class="text-gray-900 text-base">
              <p>“{t.quote}”</p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-x-4">
              <ImageComp
                imagePath={t.image}
                styles="w-10 h-10 rounded-full bg-gray-50"
              />
              <div>
                <div class="font-semibold text-gray-900">{t.name}</div>
                <div class="text-gray-600 text-sm">{t.location}</div>
              </div>
            </figcaption>
          </figure>
        </div>
      ))}
    </div>
  </div>
</section>
