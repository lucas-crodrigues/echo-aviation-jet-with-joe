---
import ImageComp from "../ImageComp.astro";

// const details = Astro.props;
const { title, description, buttonText, buttonLink, discountInfo } = Astro.props;
---

<section class="relative h-[80vh] text-white text-center overflow-hidden">
  <!-- Background Image -->
  <ImageComp
    imagePath="/src/assets/stock-echo-aviation-independent-cfi-unsplash.jpg"
    styles="absolute inset-0 w-full h-full object-cover -z-20"
  />

  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-900 to-blue-600 opacity-70 -z-10"></div>

  <!-- Content -->
  <div class="relative z-10 h-full flex flex-col justify-center items-center px-6 max-w-4xl mx-auto text-white text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      {title}
    </h1>
    <p class="text-xl md:text-2xl mb-6">
      {description}
    </p>
    <a
      href={buttonLink}
      class="btn-accent"
    >
      {buttonText}
    </a>
    <p class="mt-4 text-sm italic">{discountInfo}</p>
  </div>

  <!-- Diagonal Bottom Edge -->
  <!-- <div class="absolute bottom-0 left-0 w-full h-[10vh]  z-10">
    <svg class="w-full h-full block" viewBox="0 0 100 100" preserveAspectRatio="none">
      <polygon points="0,100 100,0 100,100" fill="white" />
    </svg>
  </div> -->
</section>
