---
const today = new Date();
import { FaPhoneSquareAlt } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  COMPANY_NAME,
  LOGO_ASSETS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  X_URL,
  YOUTUBE_URL,
  TIKTOK_URL,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import { footerLinks } from "../data/footerLinks";
import { Image } from "astro:assets";
import ImageComp from "./ImageComp.astro";

const date = new Date();
const year = date.getFullYear();

const { pathname } = Astro.url;
---

<footer class="relative bg-gradient-to-br from-cod-gray-950 font-sans to-black">
  <div
    class="px-4 pt-24 pb-16 lg:pb-2 md:pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div
      class="flex flex-col lg:flex-row justify-between gap-16 mb-8 flex-wrap"
    >
      <!-- Logo and Description -->
      <div class="w-full lg:w-1/3">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center items-center w-full"
        >
          <ImageComp
            imagePath={LOGO_ASSETS}
            styles="object-contain h-44 w-auto px-5 lg:px-0 drop-shadow-lg"
          />
        </a>
        <div class="mt-2 lg:max-w-sm font-sans2">
          <p
            class="text-sm text-cod-gray-100 px-3 lg:px-0 text-center lg:text-justify"
          >
            {SITE_DESCRIPTION}
          </p>
          <div
            class="flex justify-center lg:justify-start items-center w-full mt-3 gap-2"
          >
            <a
              href="/privacy-policy"
              class="text-sm text-cod-gray-100 hover:text-accent-200 transition-colors duration-300"
              >Privacy Policy</a
            >
            <span class="text-primary-500 text-sm"> &#x2022; </span>
            <a
              href="/terms-of-service"
              class="text-sm text-cod-gray-100 hover:text-accent-200 transition-colors duration-300"
              >Terms of Service</a
            >
          </div>
        </div>
      </div>

      <!-- Footer Links -->
      <div
        class="w-full lg:w-7/12 flex flex-wrap gap-6 justify-center sm:justify-start text-center sm:text-left"
      >
        {
          footerLinks.map((column, index) => (
            <div class="w-full sm:w-[45%] md:w-[30%] lg:w-[20%]">
              <p class="font-bold text-xl font-sans lg:text-lg tracking-wide text-primary-400">
                {column.title}
              </p>
              <ul class="mt-2 space-y-2 text-lg font-sans2 lg:text-md">
                {column.links.map((link) => (
                  <li class="leading-none">
                    <a
                      href={link.link}
                      target={link.target}
                      class="transition-colors duration-300 text-cod-gray-100 hover:text-accent-200"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="pt-5 pb-10 border-t border-primary">
    <div
      class="mx-auto flex flex-col gap-2 lg:flex-row justify-around items-center max-w-7xl"
    >
      <p class="text-sm text-gray-100 text-center">
        Â© Copyright {year}
        {COMPANY_NAME} LLC & Jet with Joe. All rights reserved.
      </p>
      <span class="text-cod-gray-100 text-center flex gap-2 items-center">
        Powered by
        <a
          href="https://rightruddermarketing.com/"
          target="_blank"
          class="text-bold group hover:underline hover:text-cod-gray-100/70 flex gap-2 duration-200"
        >
          <ImageComp
            imagePath="/src/assets/RRM-R-symbol-474.webp"
            styles="h-6 w-auto group-hover:scale-105 group-hover:brightness-125 drop-shadow-md duration-300"
          />
          More Right Rudder
        </a>
      </span>

      <!-- Social Icons -->
      <div class="flex items-center justify-center mt-4 space-x-4 sm:mt-0">
        {
          LINKEDIN_URL && (
            <a
              href={LINKEDIN_URL}
              target="_blank"
              aria-label="LinkedIn"
              title="LinkedIn"
              class="transition-colors duration-300 text-white hover:text-blue-700 hover:scale-105"
            >
              <svg viewBox="0 0 16 16" fill="currentColor" class="h-8 lg:h-5">
                <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
              </svg>
            </a>
          )
        }

        {
          INSTAGRAM_URL && (
            <a
              href={INSTAGRAM_URL}
              target="_blank"
              aria-label="Instagram"
              title="Instagram"
              class="transition-colors duration-300 text-white hover:text-purple-600 hover:scale-105"
            >
              <svg viewBox="0 0 30 30" fill="currentColor" class="h-10 lg:h-6">
                <circle cx="15" cy="15" r="4" />
                <path d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z" />
              </svg>
            </a>
          )
        }

        {
          FACEBOOK_URL && (
            <a
              href={FACEBOOK_URL}
              target="_blank"
              aria-label="Facebook"
              title="Facebook"
              class="transition-colors duration-300 text-white hover:text-blue-500 hover:scale-105"
            >
              <svg viewBox="0 0 24 24" fill="currentColor" class="h-8 lg:h-5">
                <path d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2V2C24,0.895,23.105,0,22,0z" />
              </svg>
            </a>
          )
        }

        {
          X_URL && (
            <a
              href={X_URL}
              target="_blank"
              aria-label="X"
              title="X"
              class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
            >
              <svg
                class="size-7 -m-1 p-0"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M10.053,7.988l5.631,8.024h-1.497L8.566,7.988H10.053z M21,6v12c0,1.657-1.343,3-3,3H6c-1.657,0-3-1.343-3-3V6c0-1.657,1.343-3,3-3h12C19.657,3,21,4.343,21,6z M17.538,17l-4.186-5.99L16.774,7h-1.311l-2.704,3.16L10.552,7H6.702l3.941,5.633L6.906,17h1.333l3.001-3.516L13.698,17H17.538z" />
              </svg>
            </a>
          )
        }

        {
          YOUTUBE_URL && (
            <a
              href={YOUTUBE_URL}
              target="_blank"
              aria-label="Youtube"
              title="Youtube"
              class="transition-colors duration-300 text-white hover:text-red-500 hover:scale-105"
            >
              <svg
                class="size-7"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M21.582,6.186c-0.23-0.86-0.908-1.538-1.768-1.768C18.254,4,12,4,12,4S5.746,4,4.186,4.418c-0.86,0.23-1.538,0.908-1.768,1.768C2,7.746,2,12,2,12s0,4.254,0.418,5.814c0.23,0.86,0.908,1.538,1.768,1.768C5.746,20,12,20,12,20s6.254,0,7.814-0.418c0.861-0.23,1.538-0.908,1.768-1.768C22,16.254,22,12,22,12S22,7.746,21.582,6.186z M10,15.464V8.536L16,12L10,15.464z" />
              </svg>
            </a>
          )
        }

        {
          TIKTOK_URL && (
            <a
              href={TIKTOK_URL}
              target="_blank"
              aria-label="TikTok"
              title="TikTok"
              class="transition-colors duration-300 text-white hover:text-pink-600 hover:scale-105"
            >
              <svg viewBox="0 0 48 48" fill="currentColor" class="h-8 lg:h-5">
                <path d="M33.5 4h-6.4v24.6c0 3.2-2.6 5.9-5.9 5.9S15.3 31.8 15.3 28.6s2.6-5.9 5.9-5.9c.5 0 .9.1 1.3.2v-6.3c-.4 0-.9-.1-1.3-.1-6.8 0-12.4 5.5-12.4 12.4S14.4 41.3 21.3 41.3 33.6 35.8 33.6 28.9V17.6c1.8 1.2 4 2 6.4 2V13c-2.9 0-5.4-1.3-6.5-3V4z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </div>
</footer>
