---
const { content } = Astro.props;
import ImageComp from "./ImageComp.astro";

---

<section id={content.title} class="relative py-12 lg:py-20">
  <div class="absolute -z-30 inset-0" aria-hidden="true">
    <ImageComp
      imagePath={content.imagePath}
      loading="eager"
      styles="absolute object-cover h-full w-full object-center -z-50"
    />
    <div class="absolute bg-primary-700/70 w-full h-full z-0"></div>
  </div>
  <div class="flex items-center justify-center gap-9 md:gap-12 flex-wrap">
    <div class="lg:w-1/3">
      <h2
        class="mt-2 text-4xl font-bold tracking-tight leading-tighter text-accent-100 md:text-5xl lg:text-7xl text-center lg:text-right px-3 md:px-0"
        set:html={content.title}
      />
    </div>
    <div
      class="lg:w-1/3 text-lg leading-relaxed text-pretty font-light text-accent-100 text-center lg:text-left"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-9 lg:px-0" set:html={paragraph} />
          ))
      }
    </div>
  </div>
  <div class="w-full flex justify-center gap-16 pt-8">
    {
      content.buttons &&
        content.buttons.map((button) => (
          <a href={button.link} class="btn-accent text-2xl">{button.text}</a>
        ))
    }
  </div>
</section>
