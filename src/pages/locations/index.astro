---
import locations from "../../data/locations/locations.js";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { COMPANY_NAME } from "../../consts";

const seoData = {
  pageTitle: `All Flight Training Locations | ${COMPANY_NAME}`,
};
---

<BaseLayout
  siteTitle={seoData.pageTitle}
>
  <section class="max-w-6xl mx-auto px-6 py-16 pt-48">
    <h1 class="text-4xl md:text-5xl font-bold text-accent-100 mb-8 text-center">
      Flight Training Across the U.S.
    </h1>

    <p class="text-lg text-accent-200 mb-12 text-center max-w-2xl mx-auto">
      Echo Aviation partners with independent CFIs across the country. Select your state to view training options near you.
    </p>

    <div class="flex flex-wrap gap-6 justify-center">
      {Object.entries(locations).map(([slug, state]) => (
        <a
          href={`/locations/${slug}`}
          class="w-full sm:w-[48%] lg:w-[30%] bg-cod-gray-900 border border-primary-700 rounded-lg shadow-md hover:shadow-lg hover:border-primary-500 transition-all duration-300 p-6 flex flex-col justify-between"
        >
          <h2 class="text-2xl font-semibold text-primary-500 group-hover:text-primary-300 mb-2">
            {state.name}
          </h2>
          <p class="text-sm text-accent-200 mb-4">
            {state.cities.length} location{state.cities.length > 1 ? "s" : ""} available
          </p>
          <span class="mt-auto text-sm text-primary-400 hover:text-accent-100">
            View Cities â†’
          </span>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
