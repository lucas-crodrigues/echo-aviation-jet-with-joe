---
import ContactUs from "../components/ContactUs.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import FinancingTabs from "../components/FinancingTabs";
import CTAQuiz from "../components/CTAQuiz.astro";
import CTAQuizData from "../data/CTAQuiz";
import ImageComp from "../components/ImageComp.astro";
import { COMPANY_NICKNAME, COMPANY_NAME } from "../consts";
---

<BaseLayout
  siteTitle=`Financing | ${COMPANY_NAME}`
>
  <!-- Header -->
  <header
    class="relative h-[85vh] flex flex-col items-center justify-center"
  >
    <div class="absolute -z-30 inset-0" aria-hidden="true">
      <ImageComp
        imagePath="/src/assets/stock-pilot-taking-off-start-flight-training.jpg"
        loading="eager"
        styles="object-cover h-full w-full object-left-30 lg:object-top"
      />
    </div>
    <!-- bg-overlay to darken -->
    <div class="absolute bg-cod-gray-900/30 w-full h-full z-0"></div>
    <!-- Text -->
    <div
      class="text-white text-center z-10 flex flex-col items-center gap-8 px-5 pt-20"
    >
      <h1 class="text-3xl md:text-6xl font-bold -skew-x-12 font-sans2 tracking-tight">
        How to Access Financing at<br/>{COMPANY_NAME}
      </h1>
      <h2 class="text-xl md:text-3xl tracking-wide">
        Helping our students fund their pilot training
      </h2>
      <div
        class="flex items-center gap-1 md:gap-5 bg-white/70 px-5 py-10 rounded-lg"
      >
        <ImageComp
          imagePath="/src/assets/stratus-logo-2.webp"
          styles="h-10 lg:h-16 w-auto"
        />
      </div>
    </div>
  </header>

  <FinancingTabs client:load />


  <!-- Contact Us Form -->
  <ContactUs />
</BaseLayout>
